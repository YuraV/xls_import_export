= render 'shared/welcome'
%h2 Table For Renovation Students
%table#people.bordered.zebra
  %tr
    %th N#
    %th Initials
    %th faculty_name
    %th study_type
    %th kyrs
    %th renovation_reason
    %th date
    %th student_id
    %th nakaz_rektora

  - @people.each_with_index do |person, i|
    %tr
      %td= person.id
      %td= person.initials
      %td=person.faculty_name
      %td=person.study_type
      %td=person.kyrs
      %td=person.renovation_reason
      %td=person.date
      %td=person.student_id
      %td=person.nakaz_rektora
= will_paginate @people
