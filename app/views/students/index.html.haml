%h1 students

%h2
  = link_to "Main Page", root_path
%table#students
  %tr
    %th N#
    %th Initials
    %th Department
    %th Study Type
    %th Appointment
    %th Person_id
  - @students.each_with_index do |student, i|
    %tr
      %td= i+1
      %td= student.initials
      %td= student.department
      %td= student.study_type
      %td= student.appointment
      %td= student.person_id
      -#%td= student.released_on.strftime("%B %e, %Y")
      -#%td= number_to_currency(student.price)
%h2 Import students
= render 'shared/form', route: import_students_path


= link_to 'files', find_files_students_path, method: :post
